// replace dialog div with contents of dialog text from partial

$('#genericModalContent').html("<%= escape_javascript(
          render partial: 'stash_engine/admin_datasets/curation_state_popup', locals: {
            curation_activity: @curation_activity, title: 'Change Status'
          }) %>");

