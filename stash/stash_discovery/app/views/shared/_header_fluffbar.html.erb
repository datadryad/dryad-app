<% if controller_name == 'catalog' && (has_search_parameters? || params[:action] == 'show') %>
  <div class="geobl-search-spacing">
    <%= render_search_bar  %>
  </div>
<% else %>
  <div class='geobl-homepage-masthead jumbotron'>
    <div class='d-flex justify-content-center'>
      <%= content_tag :h1, t('geoblacklight.home.headline'), class: 'text-center' %>
    </div>
    <div class='d-flex justify-content-center'>
      <%= content_tag :h2, t('geoblacklight.home.search_heading'), class: 'text-center' %>
    </div>
    <div class='row justify-content-md-center'>
      <div class='col-md-6 col-sm-12'>
        <div class='navbar-search'>
          <%= render_search_bar %>
        </div>
      </div>
    </div>
  </div>
<% end %>