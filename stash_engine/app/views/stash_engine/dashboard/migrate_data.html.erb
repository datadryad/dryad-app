<h1>Migrate Your Data</h1>
<fieldset class="c-fieldset">
  <legend class="c-fieldset__legend">To migrate your data from your old DASH or Dryad account, please enter the email address you used for that account.
    An email containing a six-digit code will be sent within five minutes.</legend>
  <%= form_tag auth_migrate_mail_path, class: "c-input", method: "get" do %>
    <%= label_tag("Email address:", nil, {:class=>"c-input__label"})%>
    <%= text_field_tag(:email, nil, {:class=>"c-input__text"}) %>
    <%= submit_tag("Send code", {:class=>'o-button__plain-text5'}) %>
  <% end %>
  <legend class="c-fieldset__legend">Please enter the six-digit code from your email message to migrate your data.</legend>
  <%= form_tag auth_migrate_code_path, class: "c-input", method: "get" do %>
    <%= label_tag("Enter code:", nil, {:class=>"c-input__label"})%>
    <%= text_field_tag(:code, nil, {:class=>"c-input__text"}) %>
    <%= submit_tag("Migrate data", {:class=>'o-button__plain-text5'}) %>
  <% end %>
  <% if flash[:error] %>
    <div class="c-input__error"><%= flash[:error] %></div>
  <% end %>
</fieldset>