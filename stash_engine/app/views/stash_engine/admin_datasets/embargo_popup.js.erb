// replace dialog div with contents of dialog text from partial

$('#popup_dialog').html("<%= escape_javascript(
          render partial: 'stash_engine/admin_datasets/curation_embargo_popup', locals: { resource: @resource, curation_activity: @curation_activity }) %>");

// now open a jquery ui modal dialog
$(function() {
  $("#popup_dialog").dialog({
    autoOpen: true,
    height: 'auto',
    width: '500px',
    modal: true,
    title: 'Change Publication Date'
  });

  // make the cancel button in the dialog hide the dialog
  $("#cancel_dialog").click(function (e) {
    e.preventDefault();
    $('#popup_dialog').dialog('close');
  });
});
