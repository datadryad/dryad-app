<%# locals: id, label %>
<fieldset style="border: 0; padding: 0;" class="o-admin-form-pair">
  <span><legend><%= label %></legend> <label for="<%= id %>start">from:</label></span>
  <%= date_field_tag("filters[#{id}][start_date]", @filters.dig(id.to_sym, :start_date), class: "c-input__text#{@filters.dig(id.to_sym, :start_date).present? ? ' selected' : ''}", id: "#{id}start") %>
  <label for="<%= id %>end">to:</label>
  <%= date_field_tag("filters[#{id}][end_date]", @filters.dig(id.to_sym, :end_date), class: "c-input__text#{@filters.dig(id.to_sym, :end_date).present? ? ' selected' : ''}", id: "#{id}end") %>
</fieldset>