<div class="table-wrapper c-lined-table-wrapper" style="margin-top: 0;" role="region" tabindex="0" aria-label="Curation table">
  <table class="c-lined-table" id="curation_table">
    <thead>
    <tr>
      <th>
        Resource ID
      </th>
      <th class="c-lined-table__sort" <%= sort_display('created_at') %>>
        <%= sortable_column_head sort_field: 'created_at', title: 'Timestamp', remote: :true %>
      </th>
      <th>
        Version
      </th>
      <th>
        Status
      </th>
      <th>
        Action taken by
      </th>
      <th>
        Notes
      </th>
    </tr>
  </thead>
  <tbody>
    <% @curation_activities.each do |curation_activity| %>
      <tr class="c-lined-table__row">
        <td><%= curation_activity.resource_id %></td>
        <td><%= formatted_datetime(curation_activity.created_at) %></td>
        <td><%= curation_activity.resource.stash_version.version %></td>
        <td><%= curation_activity.readable_status %></td>
        <td><%= curation_activity.user&.name || "System" %></td>
        <td><%= format_external_references(curation_activity.note) %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>