<h1>Change dataset submitter</h1>
<%= form_with(url: ds_admin_edit_submitter_path(@identifier.id), method: :post, local: false) do |form| -%>
  <div class="c-input">
    <%= form.label :orcid, "Enter the ORCID of the submitter user", class: 'c-input__label' %>
    <%= form.text_field :orcid, class: "c-input__text", value: @resource.submitter.orcid %>
  </div>
  <div class="c-modal__buttons-right">
    <%= submit_tag 'Submit', class: 'o-button__plain-text2', id: 'popup_submit' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text7' %>
  </div>
<% end %>