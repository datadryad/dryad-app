<h1>Add github issue</h1>
<%= form_with(url: ds_admin_issue_path(@identifier.id), method: :post, local: false) do |form| -%>
  <div class="c-input">
    <span style="display: inline-flex; gap: 1ch">
      <%= form.label :issue, 'Enter the issue number', class: 'c-input__label' %>
      <span> (For example, <code>1234</code>)</span>
    </span>
    <%= form.text_field :issue, class: "c-input__text" %>
  </div>
  <div class="c-modal__buttons-right">
    <%= submit_tag 'Submit', class: 'o-button__plain-text2', id: 'popup_submit' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text7' %>
  </div>
<% end %>