<h1>Flag dataset</h1>
<%= form_with(url: ds_admin_flag_path(@identifier.id), method: :post, local: false) do |form| -%>
  <div class="o-admin-dialog">
    <div class="c-input">
      <%= label_tag :flag, 'Select flag' %>
      <%= select_tag(:flag, options_for_select([['', nil]] + StashEngine::Flag.flags.map { |k, _v| [k.upcase_first, k] }, @resource.flag&.flag), class: 'c-input__select', style: 'flex-shrink: 1; flex-grow: 1; min-width: 0; max-width: 100%;') %> 
    </div>
  </div>
  <div class="c-modal__buttons-right">
    <%= submit_tag 'Submit', class: 'o-button__plain-text2', id: 'popup_submit' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text7' %>
  </div>
<% end %>