<% # local: identifier %>
<h1><%= params[:internal_datum_id] ? 'Edit datum' : 'Add datum' %></h1>
<% my_path = params[:sub_method] == 'put' ? stash_engine_internal_datum_path(@internal_datum) :internal_data_create_path(@identifier) %>
<%= form_with(model: @internal_datum, url: my_path, method: params[:sub_method], local: false ) do |f| -%>
  <div class="c-input">
    <%= f.label :data_type, "Type:", class: 'c-input__label' %>
    <%= f.select(:data_type, options_for_select( @options, @internal_datum.data_type), {}, { disabled: ( params[:sub_method] == 'put' ), class: 'c-input__select'} ) %>
  </div>
  <div class="c-input">
    <%= f.label :value, "Value:", class: 'c-input__label' %>
    <%= f.text_area(:value, class: 'c-input__textarea', style: 'width:100%') %>
  </div>
  <div class="c-modal__buttons-right">
    <%= f.button 'Submit', type: 'submit', class: 'o-button__plain-text2' %>
    <%= f.button 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text3' %>
  </div>
<% end %>
