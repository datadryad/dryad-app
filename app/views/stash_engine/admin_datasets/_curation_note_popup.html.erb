<% # local: identifier, title %>
<div class="o-admin-dialog">
  <h1><%= title %></h1>
  <%= form_with model: StashEngine::CurationActivity.new,
        url: curation_note_path(@curation_activity.resource.identifier_id),
        method: :post,
        local: false do |f| %>
    <%= hidden_field_tag :log_page, 'true' %>
    <div class="c-input">
      <label class="c-input__label" for="curation_activity_note">Notes</label>
      <%= f.text_area(:note, class: 'c-input__textarea') %>
    </div>
    <%= f.hidden_field :resource_id %>
    <%= f.hidden_field :status %>
    <%= button_tag 'Submit', type: 'submit', class: 'o-button__plain-text2' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text3' %>
  <% end %>
</div>