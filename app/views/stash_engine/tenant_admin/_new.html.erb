<h1>Enter a new institutional member</h1>
<%= form_with(url: tenant_create_path, method: :post, local: true) do |form| -%>
  <div class="c-input">
    <%= form.label :id, "Member ID (usually main portion of web domain)"%>
    <%= form.text_field(:id, required: true, value: '', class: 'c-input__text', style: 'width:100%') %>
  </div>
  <%= render partial: 'long_name', locals: {form: form} %>
  <%= render partial: 'short_name', locals: {form: form} %>
  <%= render partial: 'authentication', locals: {form: form} %>
  <%= render partial: 'logo', locals: {form: form} %>
  <%= render partial: 'ror_orgs', locals: {form: form} %>
  <%= render partial: 'campus_contacts', locals: {form: form} %>
  <%= render partial: 'enabled', locals: {form: form} %>
  <%= render partial: 'partner_display', locals: {form: form} %>
  <%= render partial: 'covers_dpc', locals: {form: form} %>
  <div class="c-modal__buttons-right">
    <%= submit_tag 'Submit', class: 'o-button__plain-text2' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text7' %>
  </div>
<% end %>