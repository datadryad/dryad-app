<% # local: user %>
<h1>Update email</h1>
<p>Set new email for user: <%= "#{user.first_name} #{user.last_name}".strip %></p>
<%= form_with(url: user_admin_set_email_path(user.id), method: :post, local: false) do -%>
  <div class="c-input">
  <%= label_tag 'Email', user.email, class: 'c-input__label' %>
  <%= text_field_tag('email', user.email, class: 'c-input__text') %>
  </div>
  <div class="c-modal__buttons-right">
    <%= submit_tag 'Submit', class: 'o-button__plain-text2' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text7' %>
  </div>
<% end %>

