<% @page_title = "My datasets - publish and preserve your data" %>
<% if @doi.present? %>
  <p class="success-hidden">
    Thank you for your submission! Please <a href="https://form.jotform.com/232493320676357?datasetDOI=<%= @doi %>&orcid=<%= current_user.orcid %>">complete a short survey about your experience</a>.
  </p>
<% end %>
<div class="c-datasets-heading">
  <h1 class="c-datasets-heading__heading o-heading__level1">My datasets</h1>
  <%= button_to stash_url_helpers.new_resource_path, class: 'c-datasets-heading__button prevent-click', form_class: 'o-button__inline-form', method: :get do %>
    <i class="fas fa-plus" aria-hidden="true"></i>Start new submission
  <% end %>
</div>
<div id="user_datasets" data-load="<%= stash_url_helpers.dashboard_user_datasets_url(format: :js) %>">
  <p style="text-align: center;"><i class="fa fa-spin fa-spinner" aria-hidden="true" style="color: #888"></i></p>
</div>
<p style="text-align:right; font-size: .9em;"><a href="/feedback?m=4&l=dashboard" class="o-link__buttonlink"><i class="fa fa-commenting-o" aria-hidden="true" style="margin-right: .5ch"></i>Help direct the future of Dryad</a></p>
