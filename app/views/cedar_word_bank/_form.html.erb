<h1><% if @bank.id.present? %>Update <%= @bank.label %><% else %>Create a new word bank<% end %></h1>
<%= form_with(url: @bank.id.present? ? cedar_word_bank_update_path : cedar_word_bank_create_path, method: :post, local: false) do |form| -%>
  <div class="c-input">
    <%= form.label :label, "Word bank label", class: 'c-input__label' %>
    <%= form.text_field(:label, value: @bank.label, class: 'c-input__text') %>
  </div>
  <div class="c-input">
    <%= form.label :keywords, "Keyword regex", class: 'c-input__label' %>
    <p id="regex-desc" style="margin: .25ch 0;">Case-insensitive character sequences, pipe-separated, that will trigger the offering of the set of CEDAR templates associated with this word bank.</p>
    <%= form.text_area(:keywords, value: @bank.keywords, class: 'c-input__textarea', style: 'width:100%; font-family: Monaco, monospace; font-size: .8em;', rows: 5, 'aria-describedby': 'regex-desc') %>
  </div>
  <div class="c-modal__buttons-right">
    <%= submit_tag 'Submit', class: 'o-button__plain-text2' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text7' %>
  </div>
<% end %>