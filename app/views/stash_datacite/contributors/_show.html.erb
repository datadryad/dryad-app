<% unless contributors.nil? || contributors.length < 1 || (contributors.length == 1 && contributors[0].contributor_name_friendly == 'N/A') %>
  <div id="show_funding">
  	<h2>Funding</h2>
    <ul class="o-list">
      <% contributors.each_with_index do |contributor, i| %>
    	  <li>
          <%if contributor.name_identifier_id.present? && contributor.identifier_type == 'ror' %>
            <a href="/search?q=<%= URI.encode_www_form_component(contributor.name_identifier_id) %>"><%= contributor.contributor_name_friendly%></a>
          <% else %>
    	      <span><%= contributor.contributor_name_friendly%><%if current_user&.min_app_admin? && contributor.name_identifier_id.blank? %><i class="fas fa-triangle-exclamation unmatched-icon" role="note" aria-label="Unmatched funder" title="Unmatched funder"></i><%end%></span>
          <% end %>
          <% if contributor.award_number.present? %>: <span>#{contributor.award_number}</span><% end %><% if contributor.award_description.present? %>, <span>#{contributor.award_description}</span><% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
