<h1 class="o-heading__level1"><%= review.title_str.html_safe %></h1>
<div class="t-landing__metadata o-metadata">
  <%= render partial: "stash_datacite/authors/show", locals: { authors: review.authors } %>
  <%= render partial: "stash_datacite/publishers/publication_info", locals: {resource: resource } %>
</div>

<% if review.collected_datasets.count.positive? %>
  <section class="collection-section">
    <h2>Collected datasets</h2>
    <%= render partial: "stash_datacite/related_identifiers/collection", locals: { review: review } %>
  </section>
<% end %>

<%= render partial: "stash_datacite/descriptions/show",
     locals: { abstract: review.abstract, methods: '',
   other: '', changelog: '' } %>