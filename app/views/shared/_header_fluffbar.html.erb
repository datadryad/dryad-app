<%
  # This replaces the header bar in Blacklight. It's called from our special layout which is only for
  # Blacklight and customized. It has different top content
  # for the search result page (catalog with search params) vs the explore page.
%>

<% if controller_name == 'catalog' && (has_search_parameters? || params[:action] == 'show') %>
  <div class="geobl-search-spacing">
    <%= render_search_bar  %>
  </div>
<% else %>
  <div class='geobl-homepage-masthead jumbotron'>
    <div class='d-flex justify-content-center'>
      <%= content_tag :h1, t('blacklight.home.headline'), class: 'text-center' %>
    </div>
    <div class='d-flex justify-content-center'>
      <%= content_tag :h2, t('blacklight.home.search_heading'), class: 'text-center' %>
    </div>
    <div class='row justify-content-md-center'>
      <div class='col-md-6 col-sm-12'>
        <div class='navbar-search'>
          <%= render_search_bar %>
        </div>
      </div>
    </div>
  </div>
<% end %>
