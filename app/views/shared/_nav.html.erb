          <button class="c-header_nav-button" aria-haspopup="menu" aria-expanded="false" aria-controls="manage-menu">Datasets</button>
          <ul class="c-header__nav-submenu" id="manage-menu" hidden>
            <li><%= link_to 'My datasets', dashboard_path, class: 'js-nav-out'%>
            <li><%= link_to 'Admin dashboard', admin_dashboard_path %>
            <% if current_user.system_user? %>
              <li><%= link_to 'Curation stats', curation_stats_path %>
              <li><%= link_to 'Journals', journals_path %>
              <li><%= link_to 'Dataset funders', ds_admin_funders_path %>
              <% if current_user.min_curator? %>
                <li><%= link_to 'Publication updater', publication_updater_path %></li>
              <% end %>
              <% if current_user.min_manager? %>
                <li><%= link_to 'Submission queue', url_for(controller: 'stash_engine/submission_queue', action: 'index', only_path: true) %>
