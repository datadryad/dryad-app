      <ul class="c-header__nav-submenu" id="about-menu" hidden>
        <li><%= link_to 'Who we are', about_path %></li>
        <li><%= link_to 'What we do', mission_path %></li>
      </ul>
    </li>

    <li class="c-header__nav-item">
      <%= link_to 'Partner with us', join_us_path %>
    </li>
    <li class="c-header__nav-item">
      <%= link_to 'Support us', support_us_path %>
    </li>

    <li class="c-header__nav-item"><%= link_to 'Get help', help_path %></li>

    <% if current_user %>
      <li class="c-header__nav-item">
