<% @document_list.take(5).each do |document| %>

  <% author_string = result['dc_creator_sm'].first(5).join('; ') %>
  <% author_string += '; et al' if result['dc_creator_sm'].size > 5 %>
  <% desc_string = author_string + '. ' + document['dc_description_s'] %>

  <div class="c-latest__dataset">
    <p class="c-latest__title" role="heading" aria-level="3"><%= link_to document['dc_title_s']&.html_safe, stash_url_helpers.show_path(document['dc_identifier_s'])%></p>
    <p class="c-latest__desc">
      <%= desc_string.truncate_words(35) %>
    </p>
  </div>
<% end %>