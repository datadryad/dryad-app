<h1>Edit CEDAR template</h1>
<%= form_with(url: cedar_template_edit_path, method: :post, local: false) do |form| -%>
  <p><b>Title:</b> <%= @template.title %></p>
  <p><b>ID:</b> <%= @template.id %></p>
  <div class="c-input">
    <label for="word_bank_id">Word bank:</label>
    <%= form.select :word_bank_id, options_from_collection_for_select([OpenStruct.new(id: '', label: '')] + CedarWordBank.all, :id, :label, @template.word_bank_id), {}, {class: 'c-input__select'} %>
  </div>
  <div class="c-modal__buttons-right">
    <%= submit_tag 'Submit', class: 'o-button__plain-text2' %>
    <%= button_tag 'Cancel', type: 'button', id: 'cancel_dialog', class: 'o-button__plain-text7' %>
  </div>
<% end %>