// this changes the parts of the form that need to be changed so it converts it to a patch action (POST)
<% form_id = unique_form_id(@resource_type) %>
var form = $('#<%= params[:form_id] %>');
form.attr('id', '<%= form_id %>');
form.attr('action', '<%= stash_datacite.resource_types_update_path %>');
form.find("#resource_type_id").attr('value', '<%= @resource_type.id %>');
form.find("#form_id").attr('value', '<%= form_id %>');

$('<input>').attr({
  type: 'hidden',
  name: '_method',
  value: 'patch'
}).appendTo(form);